{
  "name": "ags-script-ide-vscode",
  "displayName": "AGS Script IDE",
  "description": "A language server for AGS Script",
  "author": "Ã‰rico Vieira Porto",
  "license": "MIT",
  "version": "1.10.2",
  "publisher": "ericoporto",
  "repository": {
    "type": "git",
    "url": "https://github.com/ericoporto/ags-script-language-server"
  },
  "engines": {
    "vscode": "^1.44.0"
  },
  "icon": "assets/ags-script-logo.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "shell script",
    "ags script",
    "ags-script"
  ],
  "activationEvents": [
    "onLanguage:shellscript"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Bash IDE configuration",
      "properties": {
        "AgsScriptIde.globPattern": {
          "type": "string",
          "default": "**/*@(.asc|.ash)",
          "description": "Glob pattern for finding and parsing AGS script files."
        },
        "AgsScriptIde.highlightParsingErrors": {
          "type": "boolean",
          "default": true,
          "description": "Controls if parsing errors will be highlighted as problems."
        },
        "AgsScriptIde.explainshellEndpoint": {
          "type": "string",
          "default": "",
          "description": "Configure explainshell server in order to get hover documentation on flags and options."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "cd .. && yarn run compile"
  },
  "dependencies": {
    "ags-script-language-server": "1.16.1",
    "vscode-languageclient": "^6.1.3",
    "vscode-languageserver": "^6.1.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.44.0"
  }
}
